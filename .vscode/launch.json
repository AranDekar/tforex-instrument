{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Instrument",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/app.js",
            "stopOnEntry": false,
            "args": [],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": null,
            "runtimeExecutable": null,
            "runtimeArgs": [
                "--nolazy"
            ],
            "env": {
                "NODE_ENV": "development",
                "KAFKA": "kafka:9092",
                "MONGO": "mongodb://127.0.0.1:27017/tforex",
                "PORT": "10040"
            },
            "smartStep": true,
            "sourceMaps": true,
            "outFiles": [],
        },
        {
            "type": "node",
            "request": "attach",
            "name": "nodemon-instrument",
            // "processId": "${command:PickProcess}",
            "restart": true,
            "protocol": "inspector",
            "sourceMaps": true,
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/usr/src/app/",
            "port": 5858,
            "address": "localhost"
        }
    ]
}